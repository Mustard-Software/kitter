{
  "name": "kitter",
  "version": "0.0.7",
  "description": "Kitter is a minimalist documentation framework for style kits and design token. Built in React.",
  "author": "Mustard Software LLC",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc",
    "ci": "npm run build && npm run check-format && npm run test",
    "format": "prettier --write .",
    "test": "vitest run",
    "dev": "vitest",
    "check-format": "prettier --check .",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drewlowe/kitter.git"
  },
  "keywords": [
    "documentation",
    "css",
    "design"
  ],
  "homepage": "https://github.com/drewlowe/kitter#readme",
  "bugs": {
    "url": "https://github.com/drewlowe/kitter/issues"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.31.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vite": "^7.0.5"
  }
}
